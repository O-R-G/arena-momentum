{
  "functions": {
    "api/*.php": {
      "runtime": "vercel-php@0.7.3"
    },
    "index.php": {
      "runtime": "vercel-php@0.7.3"
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(about|schedule|colophon)/?$", "dest": "/index.php" },
    { "src": "/", "dest": "/index.php" }
  ],
  "env": {
    "NOW_PHP_DEBUG": "1"
  }
}